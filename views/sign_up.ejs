        <label for="email">
            EMAIL
        </label>
        <input type="email" placeholder="your email goes here" id="email" required />
        <label for=" password">
            PASSWORD
        </label>
        <input type="password" placeholder="enter your password" id="password" required />
		<label for="confirm_password">
            CONFIRM PASSWORD
		</label>
        <input type="password" placeholder="confirm your password" id="confirm_password" required />
		<br>

        <input type="submit" placeholder="submit" id="submit" />

    </form>
</body>
</html>